{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "plugin:jest/recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": ["node", "promise", "jest"],
  "rules": {
    "no-warning-comments": "warn",
    "strict": "error",
    "no-console": "off",
    "node/no-unpublished-require": "off"
  }
}
